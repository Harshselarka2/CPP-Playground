{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++23",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "mkdir -p build && g++ -std=c++23 -Wall -Wextra -Wpedantic -O2 -g ${file} -o build/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "mkdir -p build && g++ -std=c++23 -Wall -Wextra -O0 -g ${file} -o build/${fileBasenameNoExtension}"
      ]
    },
    {
      "label": "Build ASan",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "mkdir -p build && g++ -std=c++23 -Wall -Wextra -O1 -g -fsanitize=address,undefined -fno-omit-frame-pointer ${file} -o build/${fileBasenameNoExtension}"
      ]
    }
  ]
}
