{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++23",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++23",
        "-Wall",
        "-Wextra",
        "-Wpedantic",
        "-O2",
        "-g",
        "${file}",
        "-o",
        "${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++23",
        "-Wall",
        "-Wextra",
        "-O0",
        "-g",
        "${file}",
        "-o",
        "${fileBasenameNoExtension}"
      ]
    },
    {
      "label": "Build ASan",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++23",
        "-Wall",
        "-Wextra",
        "-O1",
        "-g",
        "-fsanitize=address,undefined",
        "-fno-omit-frame-pointer",
        "${file}",
        "-o",
        "${fileBasenameNoExtension}"
      ]
    }
  ]
}
